{
    "version": 3,
    "configurePresets": [
        {
            "name": "release-conan",
            "displayName": "Release (Conan)",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/build/conan_toolchain.cmake",
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "debug-conan",
            "displayName": "Debug (Conan)",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/build/conan_toolchain.cmake",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ]
}
